{
    "name": "Laravel Development",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/var/www/html",
    // Configurez les propriétés du conteneur ici.
    "customizations": {
        "vscode": {
            "extensions": [
                "onecentlin.laravel-extension-pack",
                "Vue.volar",
                "nhedger.inertia",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "bradlc.vscode-tailwindcss",
                "cpylua.language-postcss"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": true
                }
            }
        }
    },
    // Ajoutez les ports que vous voulez rendre accessibles.
    "forwardPorts": [
        80,
        8080
    ],
    // Définissez les commandes à exécuter quand le conteneur est créé.
    "postCreateCommand": "composer install",
    // Utilisez 'settings' pour définir la configuration *inside* le conteneur.
    "remoteUser": "www-data"
}